@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-6">
        <h2>Noeuds</h2>
        <div class="node-container">

        </div>
        <div class="node-form-container">
            <h2>Ajouter Noeuds</h2>
            <div class="form-group">
                <label> Host </label>
                <input type="text" id="hostname" placeholder="Ip, Ndd..." class="form-control" />
            </div>
            <div class="form-group">
                <label> User </label>
                <input type="text" id="username" placeholder="Bob, Kevin, R2D2..." class="form-control" />
            </div>
            <div class="form-group">
                <label> Password </label>
                <input type="text" id="password" placeholder="*********" class="form-control" />
            </div>
            <button id="creator" type="submit" class="btn btn-default">Créer</button>
        </div>
    </div>
    <div class="col-md-6">
        <div class="input">
            <form class="form-inline">
                <div class="form-group">
                    <label for="exampleInputName2">Command</label>
                    <input type="text" class="form-control" id="command" placeholder="Jane Doe">
                </div>
                <button id="commander" type="submit" class="btn btn-default">Send</button>
            </form>
        </div>
        <div class="output">

        </div>
    </div>
</div>

<div class="node-pattern">
    <div>
        <label class="hostname"> </label>
    </div>
    <div>
        <span class="username"> </span> - <span class="password"> </span>
    </div>
</div>