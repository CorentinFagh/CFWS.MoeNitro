@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-3">
        <h2>
            Noeuds
            <button id="starter" type="submit" class="btn btn-default">Start process</button>
        </h2>
        <div class="node-container">
        </div>
        <div class="node-form-container">
            <h4>Ajouter Noeud</h4>
            <div class="form-group">
                <label> Nom </label>
                <input type="text" id="name" name="name" placeholder="my suppasuppa node" class="form-control" />
            </div>
            <div class="form-group">
                <label> Host </label>
                <input type="text" id="hostname" name="hostname" placeholder="Ip, Ndd..." class="form-control" />
            </div>
            <div class="form-group">
                <label> User </label>
                <input type="text" id="username" name="username" placeholder="Bob, Kevin, R2D2..." class="form-control" />
            </div>
            <div class="form-group">
                <label> Password </label>
                <input type="text" id="password" name="password" placeholder="*********" class="form-control" />
            </div>
            <button id="creator" type="submit" class="btn btn-default">Créer</button>
        </div>
        <div class="input">
            <form class="form-inline">
                <h4>Commande instantanée</h4>
                <div class="form-group">
                    <input type="text" class="form-control" id="command" placeholder="Jane Doe">
                </div>
                <button id="commander" type="submit" class="btn btn-default">Send</button>
            </form>
        </div>
    </div>
    <div class="col-md-9">
        <div class="output">

        </div>
        <div id="chart-container">

        </div>
    </div>
</div>

<div class="node-pattern" style="display:none">
    <div>
        <label class="name"></label> <span class="suppressor glyphicon glyphicon-remove pull-right" ></span>
    </div>
    <div>
        <span class="hostname"></span> - <span class="username"> </span> - <span class="password"> </span>
    </div>
</div>

@section scripts{
<script src="https://code.highcharts.com/highcharts.js"></script>  
}